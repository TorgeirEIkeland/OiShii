<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/medium_Spacing"
    android:layout_marginBottom="@dimen/medium_Spacing"
    android:layout_marginRight="@dimen/medium_Spacing"
    app:cardCornerRadius="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border">


        //Wierd fix but it works for vertical textView

        <TextView
            android:id="@+id/dishName_textView"
            style="@style/prestigeSideView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lowIsh_Spacing"
            android:layout_marginTop="160dp"
            android:gravity="end"
            android:rotation="-90"
            android:text="WOK"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toStartOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/large_Spacing"
            android:layout_marginTop="@dimen/lowIsh_Spacing"
            android:layout_marginBottom="@dimen/lowIsh_Spacing"
            android:background="@color/oishii_dark_pink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/menu_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/low_Spacing"
            android:layout_marginTop="@dimen/lowIsh_Spacing"
            android:layout_marginRight="@dimen/lowIsh_Spacing"
            android:layout_marginBottom="@dimen/lowIsh_Spacing"
            android:divider="@color/transperant"
            android:orientation="vertical"
            android:scrollbarSize="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            tools:listitem="@layout/dish_view">


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
