<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListView
        android:id="@+id/checkout_listView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="TextView"
        android:textSize="@dimen/header_size"
        android:background="@drawable/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="64dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="@id/checkout_listView"
        app:layout_constraintTop_toTopOf="@id/checkout_listView"
        app:layout_constraintBottom_toTopOf="@id/checkout_listView"
        app:layout_constraintEnd_toStartOf="@id/checkout_listView"
        app:srcCompat="@drawable/oishii_5"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="167dp" />

    <TextView
        android:id="@+id/pay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Pay now"
        android:textColor="@color/black"
        android:textSize="@dimen/header_size"
        app:layout_constraintEnd_toEndOf="@id/checkout_listView"
        app:layout_constraintStart_toStartOf="@id/checkout_listView"
        app:layout_constraintTop_toBottomOf="@id/checkout_listView" />


</androidx.constraintlayout.widget.ConstraintLayout>