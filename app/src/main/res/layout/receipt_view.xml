<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/receiptConstraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/oishii_light_pink">


    <TextView
        android:id="@+id/dishTitle_textView"
        style="@style/dishHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Dish Title" />

    <TextView
        android:id="@+id/amount_textView"
        style="@style/dishHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/price_textView"
        app:layout_constraintTop_toBottomOf="@id/dishTitle_textView"
        android:layout_marginEnd="@dimen/lowIsh_Spacing"
        tools:text="2stk"/>

    <TextView
        android:id="@+id/price_textView"
        style="@style/dishHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/amount_textView"
        tools:text="21kr" />


</androidx.constraintlayout.widget.ConstraintLayout>